#ifndef OSGEARTH_DRIVERS_REX_UNIFORM_CACHE
#define OSGEARTH_DRIVERS_REX_UNIFORM_CACHE 1

#include <osg/Uniform>

namespace osgEarth { namespace Drivers { namespace RexTerrainEngine
{
    /**
     * Utility to cache static uniforms that have the same values and names.
     */
    class UniformCache
    {
    public:
        /**
         * Get or create a MatrixUniform with the given name and value.
         */
        static osg::Uniform* getOrCreateMatrixUniform(const std::string& name, const osg::Matrixf& m);
    };

} } } // namespace osgEarth::Drivers::RexTerrainEngine

#endif // OSGEARTH_DRIVERS_REX_UNIFORM_CACHE
